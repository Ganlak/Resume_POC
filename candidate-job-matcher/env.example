# ==============================================
# LLM Candidate-Job Matcher Configuration
# ==============================================

# -----------------------
# Azure OpenAI Configuration
# -----------------------
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4.1-data-pipeline-vector-db-rag
AZURE_OPENAI_EMBED_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_MODEL=gpt-4.1

# LLM Provider Selection
LLM_PROVIDER=azure_openai
# Options: azure_openai, openai, anthropic

# -----------------------
# Database Configuration
# -----------------------
# For PostgreSQL (Production - Recommended):
DATABASE_URL=postgresql://username:password@localhost:5432/job_matcher

# For SQLite (Development - Quick Start):
# DATABASE_URL=sqlite:///./data/job_matcher.db

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# -----------------------
# Application Settings
# -----------------------
APP_NAME=Candidate-Job Matcher
APP_ENV=development
# Options: development, staging, production

DEBUG=True
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------------
# File Upload Settings
# -----------------------
MAX_FILE_SIZE=10485760
# Maximum file size in bytes (10MB = 10485760)

ALLOWED_EXTENSIONS=pdf,docx,txt
# Comma-separated list of allowed file extensions

UPLOAD_FOLDER=./data/uploads
# Directory to store uploaded resumes

# -----------------------
# Export Settings
# -----------------------
EXPORT_FOLDER=./data/exports
# Directory to store generated reports

EXPORT_FORMATS=csv,pdf
# Available export formats

# -----------------------
# LLM Analysis Settings
# -----------------------
LLM_TEMPERATURE=0.3
# Temperature for LLM responses (0.0-1.0)
# Lower = more focused, Higher = more creative

LLM_MAX_TOKENS=2000
# Maximum tokens for LLM response

LLM_TIMEOUT=60
# Timeout for LLM API calls (seconds)

# -----------------------
# Pagination & Display
# -----------------------
RESULTS_PER_PAGE=10
# Number of candidates to display per page

MIN_RELEVANCE_SCORE=0
# Minimum relevance score to display (0-100)

# -----------------------
# Security
# -----------------------
SECRET_KEY=change-this-to-a-random-secret-key-in-production
# Used for session management and encryption

# -----------------------
# Feature Flags
# -----------------------
ENABLE_BATCH_PROCESSING=True
# Enable processing multiple candidates at once

ENABLE_CACHING=False
# Cache LLM responses (requires Redis)

# -----------------------
# Redis (Optional - for caching)
# -----------------------
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False

# -----------------------
# Logging
# -----------------------
LOG_FILE=./logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s